<!DOCTYPE html>
    <head>
        <script src='/editGoal.js'></script>
        <title>ScheduleMate</title>
        <h1>Edit Goal</h1>
        <link rel="stylesheet" href="form.css">
        <script src="https://kit.fontawesome.com/e8b074ea0f.js" crossorigin="anonymous"></script>
    </head>
    <body>
        <script>
            
            const taskList = <%-JSON.stringify(data.task)%>;
            
        </script>
        
        <form id="editGoalForm" method="POST" action="/editGoal:<%=data.goal.id%>">
            <label for="">Name</label>
            <input type="text" name="goalName" value="<%=data.goal.name%>">
            <label for="">Subject</label>
            <select name="eventSubject" id="eventSubDropDown"> 
                <%console.log(data.goal)%>
            <option value="<%=data.goal.subject%>"><%=data.goal.subject%></option>
            <%for(var i=0; i<data.subData.length; i++){%>
                <option value="<%=data.subData[i].id%>"><%=data.subData[i].name%></option>
            <%}%>
            <option value="none">none</option>
            </select><br>
            <label for="">Due Date</label>
            <input type="date" name="goalDueDate" value="<%=data.goal.dueDate%>"><br>
            <label>Priority</label>
            <select name="goalPriority" id="goalPriority">
                <option value="1">Critical/Urgent</option>
                <option value="2">High priority</option>
                <option value="3">Medium priority</option>
                <option value="4">Low priority</option>
                <option value="5">Optional/Long-term</option>
            </select><br>
            <label for="">Tasks</label>
            <div id="newTaskInp">
            <input type="text" id="taskInput" placeholder="Enter task">
            <span class="addBtn" id="addTask" class="addBtn">Add</span>
            </div>
            <ul id="myUL">
            </ul>
            <button type="submit" class="addBtn">Save</button>
            <a href="/deleteGoal:<%=data.goal.id%>" class="delBtn"><i class="fas fa-trash fa-lg"></i></a>
            <a href="/dashboard" class="cancelBtn">X</a>
        </form>        
    </body>
</html>